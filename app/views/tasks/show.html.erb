
<div class="jumbotron">
  <h1 class="display-4"><%= @task.title %></h1>
  <p class="lead"><%= @task.description %></p>
  <hr class="my-4">
  <p class="lead"><p>Due Date:</p><%= @task.duedate %> | <%= @task.status %></p>
  <div class="btn-group mt-2" role="group" aria-label="Button group">
    <%= link_to "Edit", edit_task_path(@task), class:"btn btn-secondary  rounded mr-1 px-3" %>
  <%= link_to "Back", tasks_path, class:"btn btn-info  rounded mr-1 px-3"%>
  <%= button_to "Delete", @task, method: :delete, class: "btn btn-danger  rounded mr-1 px-3" %>
    
  </div>
  
 
</div>

